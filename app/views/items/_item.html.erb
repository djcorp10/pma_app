<li>
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#<%= dom_id(item) %>">
				<%= item.name %>
			</a>
		</div>
		<div id="<%= dom_id(item) %>" class="accordion-body collapse">
			<div class="accordion-inner">
					<p>Quantity: <%= item.qty %></p>
					<p>Cost: $<%= item.cost %></p>
					<% if current_user != nil %>
					<% if current_user.admin? %>
					| <%= link_to "delete", item, method: :delete, confirm: "You sure?" %>
					<% end %>
					<% end %>
			</div>
		</div>
	</div>
</li> 
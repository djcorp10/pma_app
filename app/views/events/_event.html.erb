<li>
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#<%= dom_id(event) %>">
				<%= event.name %>
			</a>
		</div>
		<div id="<%= dom_id(event) %>" class="accordion-body collapse">
			<div class="accordion-inner">
					<p>Location: <%= event.location %></p>
					<p>Date: <%= event.date %></p>
					<% if current_user != nil %>
					<% if current_user.admin? %>
					| <%= link_to "delete", event, method: :delete, confirm: "You sure?" %>
					<% end %>
					<% end %>
			</div>
		</div>
	</div>
</li> 
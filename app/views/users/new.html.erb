<div class="center hero-unit">
	<% provide(:title, 'Add a User') %>
	<h1>Add a User</h1>

	<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %> 

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit "Create the account", class: "btn btn-large btn-primary" %>
	<% end %>
</div>